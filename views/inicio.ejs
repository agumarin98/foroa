<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FORO-INICIO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar bg-body-tertiary" data-bs-theme="dark"">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1">TRABAJO FINAL - ARGENTINA PROGRAMAR</span>
        </div>
      </nav>
    
    <div class="card">
        <div class="card-body" data-bs-theme="dark">
            <h4 class="card-title">Listado de los post</h4>

            <a type="button" class="btn btn-success" href="/agregar">
                Agregar Post
            </a>
            <br />

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    <% forop.forEach((item) => { %>
                        <tr>
                            <th scope="row"><%= item.id %></th>
                            <td><%= item.titulo %></td>
                            <td><%= item.descripcion %></td>
                            <td><%= item.fecha %></td>
                            <td><img src="<%= item.imagen %>" width="200" height="200"></td>
                            <td>
                                <a type="button" class="btn btn-primary" href="/editar/<%= item.id %>">
                                    Editar
                                </a>
                            </td>
                            <td>
                                <a type="button" class="btn btn-danger" href="/eliminar/<%= item.id %>">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>